local PCD_FILE=$HOME/.peco/.peco-cd
if [ $1 ] && [ $1 = "add" ]; then
  if [ $2 ]; then
    ADD_DIR=$2
    if [ $2 = "." ]; then
      ADD_DIR=$(pwd) 
    fi
    echo "add $ADD_DIR to $PCD_FILE"
    echo $ADD_DIR >> $PCD_FILE
  fi
elif [ $1 ] && [ $1 = "edit" ]; then
  if [ $EDITOR ]; then
    $EDITOR $PCD_FILE
  fi
else
  PCD_RETURN=$(cat $PCD_FILE | sort | peco)
  if [ $PCD_RETURN ]; then
    cd $PCD_RETURN
  fi
fi
